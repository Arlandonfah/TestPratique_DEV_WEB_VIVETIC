{% extends 'base.html.twig' %}

{% block title %}Pointage journalier | ViveTIC{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <style>
        .timeline-container {
            position: relative;
            height: 40px;
            background: #f0f4f8;
            border-radius: 10px;
            overflow: hidden;
        }
        .timeline-bar {
            position: absolute;
            height: 100%;
            background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
            border-radius: 10px;
        }
        .timeline-marker {
            position: absolute;
            top: 0;
            width: 4px;
            height: 100%;
            background: #ff6b6b;
            transform: translateX(-50%);
        }
        .work-period {
            background: rgba(46, 204, 113, 0.3);
        }
        .pause-period {
            background: rgba(231, 76, 60, 0.3);
        }
        .overnight-badge {
            position: absolute;
            top: -20px;
            right: 10px;
            font-size: 0.75rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card mb-4">
            <div class="card-header header-bg">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                    <div class="mb-3 mb-md-0">
                        <h1 class="h3 mb-2"><i class="fas fa-calendar-day me-2"></i>Pointage journalier</h1>
                        <p class="mb-0 opacity-75">Consultation des pointages pour une date spécifique</p>
                    </div>
                    <form class="d-flex align-items-center">
                        <div class="search-container me-2">
                            <i class="fas fa-calendar-alt search-icon"></i>
                            <input type="date" id="datePicker" name="date" value="{{ selectedDate }}" class="form-control search-input">
                        </div>
                        <button type="submit" class="btn btn-light">
                            <i class="fas fa-filter me-1"></i> Appliquer
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="card-body">
                {% if dailyLogs is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
                        <h4>Aucun pointage trouvé</h4>
                        <p class="text-muted">Aucun collaborateur n'a pointé pour cette date.</p>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="logsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Collaborateur</th>
                                    <th>Matricule</th>
                                    <th>Cartes</th>
                                    <th>Première entrée</th>
                                    <th>Dernière sortie</th>
                                    <th>Pauses</th>
                                    <th>Durée des pauses</th>
                                    <th>Timeline</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for log in dailyLogs %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar me-3">
                                                    {{ log.name|first|upper }}
                                                </div>
                                                {{ log.name }}
                                            </div>
                                        </td>
                                        <td class="fw-semibold">{{ log.pin }}</td>
                                        <td>
                                            <div class="d-flex flex-wrap">
                                                {% for card in log.cards %}
                                                    <span class="badge-card">
                                                        <i class="fas fa-id-card me-1"></i>{{ card }}
                                                    </span>
                                                {% endfor %}
                                            </div>
                                        </td>
                                        <td>
                                            {% if log.firstEntry %}
                                                {{ log.firstEntry|date('H:i') }}
                                                {% if log.firstEntry|date('Y-m-d') != selectedDate %}
                                                    <span class="badge bg-warning">+1</span>
                                                {% endif %}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if log.lastExit %}
                                                {{ log.lastExit|date('H:i') }}
                                                {% if log.lastExit|date('Y-m-d') != selectedDate %}
                                                    <span class="badge bg-warning">+1</span>
                                                {% endif %}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if log.pauseCount > 0 %}
                                                <span class="badge bg-info rounded-pill">{{ log.pauseCount }}</span>
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if log.pauseDuration > 0 %}
                                                {{ (log.pauseDuration / 3600)|number_format(1) }} h
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if log.firstEntry and log.lastExit %}
                                                <div class="timeline-container">
                                                    {% set startHour = log.firstEntry|date('H') + log.firstEntry|date('i')/60 %}
                                                    {% set endHour = log.lastExit|date('H') + log.lastExit|date('i')/60 %}
                                                    
                                                    {# Ajustement si sortie le lendemain #}
                                                    {% if log.lastExit|date('Y-m-d') != selectedDate %}
                                                        {% set endHour = endHour + 24 %}
                                                    {% endif %}
                                                    
                                                    {% set totalHours = endHour - startHour %}
                                                    {% set startPercent = 0 %}
                                                    {% set endPercent = (totalHours / 24) * 100 %}
                                                    
                                                    <div class="timeline-bar" style="left: {{ startPercent }}%; width: {{ endPercent }}%;">
                                                        <div class="work-period" style="height: 100%;"></div>
                                                        
                                                        {# Marqueurs pour les pauses #}
                                                        {% for pause in log.pauses %}
                                                            {% set pauseStart = pause.start|date('H') + pause.start|date('i')/60 %}
                                                            {% set pauseEnd = pause.end|date('H') + pause.end|date('i')/60 %}
                                                            {% set pauseLeft = ((pauseStart - startHour) / totalHours) * 100 %}
                                                            {% set pauseWidth = ((pauseEnd - pauseStart) / totalHours) * 100 %}
                                                            
                                                            <div class="pause-period" style="left: {{ pauseLeft }}%; width: {{ pauseWidth }}%;"></div>
                                                        {% endfor %}
                                                    </div>
                                                    
                                                    {# Marqueur d'heure actuelle #}
                                                    <div class="timeline-marker" style="left: 50%;"></div>
                                                </div>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistiques du jour</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="stats-card text-center">
                            <div class="stats-value text-primary">{{ dailyLogs|length }}</div>
                            <div class="stats-label">Collaborateurs</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card text-center">
                            {% set totalPauses = dailyLogs|reduce((sum, item) => sum + item.pauseCount, 0) %}
                            <div class="stats-value text-info">{{ totalPauses }}</div>
                            <div class="stats-label">Pauses totales</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card text-center">
                            {% set totalPauseTime = dailyLogs|reduce((sum, item) => sum + item.pauseDuration, 0) %}
                            <div class="stats-value text-warning">{{ (totalPauseTime / 3600)|number_format(1) }}</div>
                            <div class="stats-label">Heures de pauses</div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stats-card text-center">
                            {% set overnightCount = dailyLogs|filter(log => log.lastExit and log.lastExit|date('Y-m-d') != selectedDate)|length %}
                            <div class="stats-value text-danger">{{ overnightCount }}</div>
                            <div class="stats-label">Sorties nocturnes</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuration du datepicker
            flatpickr('#datePicker', {
                dateFormat: 'Y-m-d',
                locale: 'fr'
            });
            
            // Tri des colonnes
            const sortableHeaders = document.querySelectorAll('#logsTable .sortable');
            sortableHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    // Implémentation du tri similaire à la page précédente
                });
            });
        });
    </script>
{% endblock %}